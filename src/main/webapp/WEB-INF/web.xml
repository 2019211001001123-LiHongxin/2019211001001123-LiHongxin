<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- if you want to check hw1,you need to delete the (<!-)    -->
    <servlet>
        <servlet-name>WZMJSP</servlet-name>
        <servlet-class>com.LiHongxin.week2.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LifeCycleServlet</servlet-name>
        <servlet-class>com.LiHongxin.week3.LifeCycleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.LiHongxin.week3.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JDBCServlet</servlet-name>
        <servlet-class>com.LiHongxin.week4.JDBCServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <servlet-class>com.LiHongxin.week4.ConfigDemoServlet</servlet-class>
        <init-param>
            <param-name>name</param-name>
            <param-value>WanZhimin</param-value>
        </init-param>
        <init-param>
            <param-name>studentId</param-name>
            <param-value>2019211001001003</param-value>
        </init-param>
    </servlet>
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:sqlserver://localhost:3306;DatabaseName=userdb</param-value>
    </context-param>
    <context-param>
        <param-name>Username</param-name>
        <param-value>sa</param-value>
    </context-param>
    <context-param>
        <param-name>Password</param-name>
        <param-value>admin123456789</param-value>
    </context-param>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.LiHongxin.week5.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.LiHongxin.week6.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WZMJSP</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LifeCycleServlet</servlet-name>
        <url-pattern>/Life</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JDBCServlet</servlet-name>
        <url-pattern>/JDBC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <url-pattern>/config</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
</web-app>